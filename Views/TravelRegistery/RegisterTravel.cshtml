@{
    ViewData["Title"] = "Travel Registration";
}
<h1>@ViewData["Title"]</h1>

<p>Veuillez entrez les détails de votre voyage.</p>






@model Travel_Express.Models.NewTravelModel
<form method="post" asp-route="RegisterTravel">
    <div class="Start">
        <label for="starting_street">Starting Point: </label><br />
        Addresse de Départ:<br />
        <input asp-for="FromNumber" />
        <input asp-for="FromStreet" maxlength="100" /><br />
        <input asp-for="FromComp" maxlength="100"><br />
        Ville:<input asp-for="FromCity" maxlength="100"><br />
        Code postal:<input asp-for="FromPostalCode" maxlength="10"><br />
        Pays:<input asp-for="FromCountry"></input>
        <label for="time1_h">Date de départ: </label><br />
        <input asp-for="date1" required><br />

    </div>
    <br />
    <div class="Arrival">
        Addresse d'Arrivé:<br />
        <input asp-for="ToNumber" />
        <input asp-for="ToStreet" maxlength="100" /><br />
        <input asp-for="ToComp" maxlength="100"><br />
        Ville:<input asp-for="ToCity" maxlength="100"><br />
        Code postal:<input asp-for="ToPostalCode" maxlength="10"><br />
        Pays: <input asp-for="ToCountry"></input>
        <label for="time1_h">Date d'arrivé: </label><br />
        <input asp-for="date2" required><br />

    </div>
    <label for="seats">Siège(s) disponible(s): </label><br />
    <input asp-for="Seats" type="number" name="seats" id="seats" min="1" />
    <!--
    -->
    <div class="form-example">
        <input type="submit" value="Enregistrer">
    </div>

</form>
